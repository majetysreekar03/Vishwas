<% layout('layout/boilerplate') %>

    <h1>ADD PLACE PAGE</h1>
    <a href="/auth/logout">logout</a>

    <form action="/addPlace" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <label for="name1">Name</label>
        <input type="text" name="name" id="name1" value="<%= name.length != 0 ? name : '' %>">

        <label for="location1">Location</label>
        <input type="text" name="location" id="location1" value="<%= location.length != 0 ? location : '' %>">

        <label for="contact1">Contact:</label>
        <input type="number" name="contact" id="contact1" value="<%= contact != 0 ? contact : '' %>">

        <label for="description1">Description</label>
        <textarea name="description" id="description1" cols="30" rows="10"><%=description.length!=0?description:''%></textarea>

        <label for="category1">Category</label>
        <select name="category" id="category1">
            <option value="hotel" <%=category ==='hotel' ? 'selected' : '' %>>Hotel</option>
            <option value="restaurant" <%=category ==='restaurant' ? 'selected' : '' %>>Restaurant</option>
            <option value="theater" <%=category ==='theater' ? 'selected' : '' %>>Theater</option>
            <option value="building" <%=category ==='building' ? 'selected' : '' %>>Building</option>
            <option value="park" <%=category ==='park' ? 'selected' : '' %>>Park</option>
            <option value="others" <%=category ==='others' ? 'selected' : '' %>>Others</option>
        </select>

        <label for="pics">Images</label>
        <input type="file" name="images" id="pics" multiple>

        <button type="submit">Submit</button>
    </form>

